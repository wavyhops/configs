 bind "MWHEELDOWN" "+jump"
 bind "SPACE" "+jump"
 
  
  //1.6 Quickswitch
 alias +knife slot3
 alias -knife lastinv
 bind q +knife
 
 
  //1.7 Nade switching
 bind "mouse5" "use weapon_knife; use weapon_smokegrenade"
 bind "mouse4" "use weapon_knife; use weapon_flashbang"
 bind "v" "use weapon_knife; use weapon_incgrenade; use weapon_molotov"
